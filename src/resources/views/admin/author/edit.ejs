<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <h1>Edit author</h1>
            <form action="/admin/authors/<%= author.id %>/edit?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" name="name" class="form-control" id="name" placeholder="Enter name..."
                    value="<%= author.name %>"
                  />
                </div>
                <div class="form-group mt-1">
                  <label for="description">Description</label>
                  <br />
                  <textarea name="description" class="form-control" id="description" rows="5"><%= author.description %></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-1">Edit</button>
            </form>

        </div>
    </div>
</div>


