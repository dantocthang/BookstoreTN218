    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const addToCartBtns = document.querySelectorAll('.add-to-cart-btn')
            const filterBtn = document.querySelector('#filter-btn')
            const filterForm = document.querySelector('#filter-form')

            filterBtn.addEventListener('click', (e) => {
                const authorId = document.querySelector('input[name="authorId"]')
                const publisherId = document.querySelector('input[name="publisherId"]')
                const categoryId = document.querySelector('input[name="categoryId"]')
                filterForm.action = `/book?authorId=${authorId.value}&publisherId=${publisherId.value}&categoryId=${categoryId.value}`
                filterForm.method = 'GET'
                filterForm.submit()
            })

            addToCartBtns.forEach(btn => {
                btn.addEventListener('click', (event) => {
                    const bookId = event.target.dataset.id
                    const quantity = 1
                    $.ajax({
                        url: '/cart',
                        method: 'POST',
                        data: { bookId, quantity },
                        success: (data) => {
                            if (data.success) window.location.href = '/cart'
                            else window.location.href = '/auth/login'
                        }
                    })
                })
            })
        })
    </script>