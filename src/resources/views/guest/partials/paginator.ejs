<script>

function displayList(
    numberOfPages, 
    numberOfRecords, 
    currentPage = 1,
) {
    const paginatorElement = document.querySelector('#paginator');
    
    if (!paginatorElement) {
        return;
    }

    // add css class
    paginatorElement.classList.add('d-flex', 'justify-content-between', 'row');

    // innerHTML of paginator
    let html = `
        <ul class="pagination style-1 p-t20">
            <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                <a class="page-link" href="?page=${currentPage - 1}&filter=<%= filter %>"><</a>
            </li>`;
    
    if (numberOfPages > 5) {
        if (currentPage >= 1 && currentPage <= 3) {
            
            /**
             * Case: 1 <= currentPage <= 3
             * 
             * (1) 2 3 4 ... 9
             * 1 2 (3) 4 ... 9
            */

            for (let i = 1; i <= 4; i++) {
                html += `
                <li class="page-item">
                    <a href="?page=${i}&filter=<%= filter %>" class="page-link ${currentPage === i ? 'active' : ''}">${i}</a>
                </li>`;
            }

            html += `
            <li class="page-item">
                <a href="?page=5&filter=<%= filter %>" class="page-link">...</a>
            </li>`;

            html += `
            <li class="page-item">
                <a href="?page=${numberOfPages}&filter=<%= filter %>" class="page-link ${currentPage === numberOfPages ? 'active' : ''}">${numberOfPages}</a>
            </li>`;
            
        } else if (currentPage >= 4 && currentPage <= numberOfPages - 3) {
            /**
             * Case: 4 <= currentPage <= 6  (6 = 9 - 3)
             * 
             * 1 ... 3 (4) 5 ... 9
             * 1 ... 4 (5) 6 ... 9
             * 1 ... 5 (6) 7 ... 9
            */

            html += `
            <li class="page-item">
                <a href="?page=1&filter=<%= filter %>" class="page-link ${ currentPage === 1 ? 'active' : ''}">1</a>
            </li>`;
            html += `
            <li class="page-item">
                <a href="?page=${currentPage - 2}&filter=<%= filter %>" class="page-link">...</a>
            </li>`;

            for (let i = -1; i <= 1; i++) {
                html += `
                <li class="page-item">
                    <a href="?page=${currentPage + i}&filter=<%= filter %>" class="page-link ${ i === 0 ? 'active' : ''}">${currentPage + i}</a>
                </li>`;
            }
            
            html += `
            <li class="page-item">
                <a href="?page=${currentPage + 2}&filter=<%= filter %>" class="page-link">...</a>
            </li>`;
            html += `
            <li class="page-item">
                <a href="?page=${numberOfPages}&filter=<%= filter %>" class="page-link ${ currentPage === numberOfPages ? 'active' : ''}">${numberOfPages}</a>
            </li>`;
        } else if (currentPage >= numberOfPages - 2 && currentPage <= numberOfPages) {
            /**
             * 
             * Case: 7 <= currentPage <= 9  (7 = 9 - 3 + 1)
             * 
             * 1 ... 6 (7) 8 9
             * 1 ... 6 7 (8) 9
            */

            html += `
            <li class="page-item">
                <a href="?page=1&filter=<%= filter %>" class="page-link ${ currentPage === 1 ? 'active' : ''}">1</a>
            </li>`;
            html += `
            <li class="page-item">
                <a href="?page=${numberOfPages - 4}&filter=<%= filter %>" class="page-link">...</a>
            </li>`;

            for (let i = 3; i >= 0; i--) {
                html += `
                <li class="page-item">
                    <a href="?page=${numberOfPages - i}&filter=<%= filter %>" class="page-link ${ currentPage === numberOfPages - i ? 'active' : ''}">${numberOfPages - i}</a>
                </li>`;
            }
        }
    } else {
        for (let i = 1; i <= numberOfPages; i++) {
            html += `
            <li class="page-item">
                <a href="?page=${i}&filter=<%= filter %>" class="page-link ${currentPage === i ? 'active' : ''}">${i}</a>
            </li>`;
        }
    }

    html += `
                <li class="paginate_button page-item next ${currentPage === numberOfPages ? 'disabled' : ''}">
                    <a href="?page=${currentPage + 1}&filter=<%= filter %>" class="page-link">></a>
                </li>
            </ul>`;

    paginatorElement.innerHTML = html;
    
}

document.addEventListener('DOMContentLoaded', function() {
    displayList(
        <%=pageCount%>, 
        <%=count%>, 
        <%=currentPage%>
    );
});

</script>