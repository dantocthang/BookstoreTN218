<form action="/courses/store" method="POST">
<h1>Thêm khóa học</h1>
  <div class="mb-3">
    <label for="name" class="form-label">Tên khóa học</label>
    <input type="text" name="name" class="form-control" id="name" value="<%= data.name ?? ''%>">
    <small>
      <% if (errors.length>0) { %>
      <%=findErrorByParam(errors, 'name')?.msg ?? '' %>
      <% } %>
    </small>
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Mô tả</label>
    <input type="text" name="description" class="form-control" id="description" value="<%= data.description ?? ''%>">
    <small>
      <% if (errors.length>0) { %>
      <%=findErrorByParam(errors, 'description')?.msg ?? '' %>
      <% } %>
    </small>
  </div>
  <div class="mb-3">
    <label for="level" class="form-label">Trình độ</label>
    <input type="text" name="level" class="form-control" id="level" value="<%= data.level ?? ''%>">
    <small>
      <% if (errors.length>0) { %>
      <%=findErrorByParam(errors, 'level')?.msg ?? '' %>
      <% } %>
    </small>
  </div>
  <div class="mb-3">
    <label for="videoId" class="form-label">Video ID</label>
    <input type="text" name="videoId" class="form-control" id="videoId" value="<%= data.videoId ?? ''%>">
    <small>
      <% if (errors.length>0) { %>
      <%=findErrorByParam(errors, 'videoId')?.msg ?? '' %>
      <% } %>
    </small>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>