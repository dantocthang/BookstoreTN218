<div class="mt-4">
  <%- include('./partials/search.ejs') %>
  <div class="courses__sort">
    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
      aria-expanded="false">Thứ tự</button>
    <ul class="dropdown-menu courses__sort-dropdown">
      <li><a class="dropdown-item" href="?_sort&type=asc&column=name">Tên khóa học</a></li>
      <li><a class="dropdown-item" href="?_sort&type=asc&column=createdAt">Ngày đăng</a></li>
      <li><a class="dropdown-item" href="?_sort&type=asc&column=level">Trình độ</a></li>
    </ul>
  </div>
  <div class="row">
    <% courses.forEach(course=>{ %>
      <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
          <a href="/courses/<%=course.slug %>">
            <img src="<%=course.image %>" class="card-img-top" alt="..." />
          </a>
          <div class="card-body">
            <a href="/courses/<%=course.slug %>">
              <h5 class="card-title">
                <%=course.name %>
              </h5>
            </a>
            <p class="card-text">
              <%=course.description %>
            </p>
            <a href="/me/<%=course._id%>/add-to-cart" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
</div>

<%- include('./partials/pagination.ejs') %>