<h1>Khóa học đã xóa</h1>
<table class="table mt-4">
  <a href="/me/stored/courses">Danh sách khóa học</a>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên khóa học</th>
      <th scope="col">Trình độ</th>
      <th scope="col">Thời gian tạo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if (courses.length==0){ %>
      <td colspan="5" class="text-center">Không có khóa học nào trong thùng rác <a href="/courses/create">Đăng khóa
          học</a></td>
      <% } %>
        <% courses.forEach((course, index)=>{ %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%=course.name %></td>
            <td><%=course.level %></td>
            <td><%=course.createdAt %></td>
            <td class="d-flex justify-contents-center gap-3">
              <a class="btn-restore" href="" data-id="<%=course._id %>">Khôi phục</a>

              <a data-id="<%=course._id %>" data-display="" class="table__btn table__delete-btn" data-bs-toggle="modal"
                data-bs-target="#delete-course-modal"><i data-id="<%=course._id %>"
                  class="fa-solid fa-xmark table__icon table__delete-icon"></i></a>
            </td>
          </tr>
          <% }) %>

  </tbody>
</table>

<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học VĨNH VIỄN</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc muốn xóa khóa học</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<form id="delete-permanent-form" method="POST" hidden></form>
<form id="restore-form" method="POST" hidden></form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const deleteForm = $('#delete-permanent-form').get(0)
    const btnDelete = document.getElementById('btn-delete-course')
    const restoreForm = $('#restore-form').get(0)
    const restoreBtns = $('.btn-restore')
    const deleteBtns = $('.table__delete-btn')
    console.log(deleteBtns)

    deleteBtns.click(function (e) {
      courseId = e.target.dataset.id
    })

    restoreBtns.click(function (e) {
      e.preventDefault()
      const courseId = $(this).data('id')
      restoreForm.action = `/courses/${courseId}/restore?_method=PATCH`
      restoreForm.submit()
    })

    btnDelete.onclick = function (e) {
      deleteForm.action = `/courses/${courseId}/permanent?_method=DELETE`
      console.log(deleteForm)
      deleteForm.submit()
    }
  })
</script>